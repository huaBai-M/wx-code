@import '../common/index.wxss';

.van-card {
  position: relative;
  padding: 42rpx 0 28rpx 42rpx;
  font-size: 12px;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
 
}

.van-card__header {
  display: -webkit-flex;
  display: flex;
}

.van-card__header--center {
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
}

.van-card__thumb {
  position: relative;
  width: 118rpx;
  height: 118rpx;
  margin-right: 35rpx;
  border-radius: 50%;
  -webkit-flex: none;
  flex: none;
  overflow: hidden;
}

.van-card__thumb:empty {
  display: none;
}

.van-card__img {
  width: 100%;
  height: 100%;
}

.van-card__content {
  position: relative;
  min-width: 0;
  -webkit-flex: 1;
  display: flex;
  flex-flow: column;
  justify-content: center;
  flex: 1;
}

.van-card__desc, .van-card__title {
  word-break: break-all;
}

.van-card__title {
  font-weight: 700;
  color: #4b4949;
  font-size: 32rpx;
  /* line-height: 16px; */
}

.van-card__desc {
  line-height: 30px;
  color: #666666;
  font-size: 24rpx;
}

.van-card__bottom {
  line-height: 20px;
}

.van-card__price {
  display: inline-block;
  font-weight: 700;
  color: #f44;
}

.van-card__origin-price {
  display: inline-block;
  margin-left: 5px;
  font-size: 10px;
  color: #7d7e80;
  text-decoration: line-through;
}

.van-card__num {
  float: right;
}

.van-card__tag {
  position: absolute;
  top: 2px;
  left: 0;
}

.van-card__footer {
  width: 100%;
  text-align: right;
  -webkit-flex: none;
  flex: none;
}
